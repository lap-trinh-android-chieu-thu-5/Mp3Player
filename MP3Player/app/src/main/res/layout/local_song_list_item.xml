<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >

        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/checkbox_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_toRightOf="@id/checkbox_edit"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:id="@+id/imageview_display"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/icondisplaysongitem" />

        <TextView
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/imageview_display"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/textview_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="Ten bai hat"
            android:textColor="#030303"
            android:textSize="16sp"/>

        <TextView
            android:layout_marginLeft="2dp"
            android:textColor="#979797"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/imageview_display"
            android:layout_below="@+id/textview_song_name"
            android:id="@+id/textview_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="Ten ca si"
            android:textSize="16sp"/>

        <ImageButton
            android:padding="1dp"
            android:background="@drawable/iconlove"
            android:layout_centerVertical="true"
            android:id="@+id/image_button_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/image_button_play"
            android:layout_marginRight="10dp" />


        <ImageButton
            android:background="@drawable/iconplaysongitem"
            android:layout_centerVertical="true"
            android:id="@+id/image_button_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/image_button_menu"
            android:layout_marginRight="2dp" />

        <ImageButton
            android:background="@drawable/iconpopupmenu"
            android:layout_centerVertical="true"
            android:id="@+id/image_button_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>