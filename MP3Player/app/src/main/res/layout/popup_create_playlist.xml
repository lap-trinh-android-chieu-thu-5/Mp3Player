<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#9CC5DD"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Táº¡o playlist"
        android:textSize="16dp"
        android:textColor="#000"
        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/textinput_playlist_name"
        android:layout_width="160dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <ImageButton
            android:layout_marginRight="20dp"
            android:id="@+id/image_button_cancel"
            android:background="@drawable/iconbuttoncancel"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageButton
            android:layout_marginLeft="20dp"
            android:id="@+id/image_button_save"
            android:background="@drawable/iconbuttonsave"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>