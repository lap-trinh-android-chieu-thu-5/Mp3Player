<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#822D9A"
                android:centerColor="#24E0E0"
                android:endColor="#CAD7E0"
                android:angle="135"/>
            <!-- solid background -->
            <!-- draw a border around rectangle shape -->
            <stroke
                android:color="#A0247C"
                android:width="1dp"
                />
            <!-- draw 35 dp radius for each corner -->
            <corners android:radius="35dp"/>
        </shape>
    </item>
</selector>